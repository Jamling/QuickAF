<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textSize">@dimen/text_size_normal</item>-->
        <!--<item name="android:textColorPrimary">@color/black_666666</item>-->
        <!--<item name="textAppearanceListItemSmall">@dimen/text_size_title</item>-->
        <item name="android:listPreferredItemPaddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- radio button tab item -->
    <style name="rb_tab">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- radio button tab item of Home -->
    <style name="rb_tab_main" parent="rb_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/fg_main_bottom_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <!-- to show badge count -->
        <item name="android:maxLines">1</item>
    </style>

    <style name="preference">
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:minHeight">@dimen/preference_height</item>
        <!-- can't use in RelativeLayout -->
        <!--<item name="android:gravity">center_vertical</item>-->
    </style>

    <style name="preference_title">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">Title</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="preference_summary">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint"></item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--@android:color/secondary_text_dark-->
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="preference_check">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint"></item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="h5_progress" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/h5_progress</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <!-- main sliding tab -->
    <style name="tab_sliding" parent="text_title">
        <!--<item name="pstsOneScreenTabs">4</item>-->
        <item name="pstsSelectedTextColor">@color/colorPrimary</item>
        <item name="pstsIndicatorColor">@color/colorPrimary</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsTextAllCaps">false</item>
    </style>

    <!-- for normal text+1 32px -->
    <style name="text_title">
        <item name="android:textColor">@color/fg_title</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_normal">
        <item name="android:textColor">@color/fg_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_hint">
        <item name="android:textColor">@color/fg_hint</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>

    <style name="text_link" parent="text_title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:dividerPadding">4dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btn_primary" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:radius">24dp</item>
    </style>

    <style name="et_login" parent="text_title">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColorHint">@color/black_999999</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="anim_slide_top">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <!-- Base style for RecyclerView -->
    <style name="base_rv">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="base_list_view">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="base_filter_tab_host">
        <item name="fl_hDivider">?android:attr/listDivider</item>
        <item name="fl_hDividerShow">middle</item>
        <item name="fl_hDividerPadding">4dp</item>
        <item name="fl_vDivider">?android:attr/listDivider</item>
        <item name="fl_vDividerShow">middle|end</item>
    </style>
</resources>
